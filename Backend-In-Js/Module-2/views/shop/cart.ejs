<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <% for (let prods of products) { %>
  <main class="centered">
    <div class="centered-div">
      <h1><%= prods.productData.title %></h1>
      <div>
        <img src="<%= prods.productData.imageUrl %>" alt="<%= prods.productData.title %>">
      </div>
      <h2><%= prods.productData.price %></h2>
      <p><%= prods.productData.description %></p>
      <p><%= prods.quantity%></p>
      <form action="/cart-delete-item" method="post">
        <button type="submit" class="btn">Delete</button>
        <input type="hidden" name="productId" value="<%= prods.productData.id%>">
        <input type="hidden" name="productPrice" value="<%= prods.productData.price%>">
      </form>
    </div>
  </main>
  <% } %>

  <%- include('../includes/end.ejs') %>